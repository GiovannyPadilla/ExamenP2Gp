<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP2Gp.AboutPage"
             Title="AboutPage"
             BackgroundColor="LightGray">
    
    <Grid VerticalOptions="Center"
          HorizontalOptions="Center"
          RowDefinitions="Auto,Auto"
          ColumnDefinitions="*,*"
          RowSpacing="15"
          ColumnSpacing="15"
          Padding="20">

        <Frame Grid.Row="0" Grid.Column="0"
               BackgroundColor="White"
               BorderColor="Black"
               CornerRadius="8"
               Padding="15"
               HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Nombre:" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="Giovanny Alejandro Padilla Malusin" 
                       FontSize="14"
                       TextColor="Black" />
            </StackLayout>
        </Frame>

        <Frame Grid.Row="0" Grid.Column="1"
               BackgroundColor="White"
               BorderColor="Black"
               CornerRadius="8"
               Padding="15"
               HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Fecha de Nacimiento:" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="23 de abril de 2004" 
                       FontSize="14"
                       TextColor="Black" />
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="0"
               BackgroundColor="White"
               BorderColor="Black"
               CornerRadius="8"
               Padding="15"
               HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Intereses:" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="Tecnología, videojuegos, música, fútbol" 
                       FontSize="14"
                       TextColor="Black" />
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="1"
               BackgroundColor="White"
               BorderColor="Black"
               CornerRadius="8"
               Padding="15"
               HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Versión de la App:" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="Black" />
                <Label Text="1.0.0" 
                       FontSize="14"
                       TextColor="Black" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>