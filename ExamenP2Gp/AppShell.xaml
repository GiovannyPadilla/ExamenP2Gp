<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExamenP2Gp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExamenP2Gp"
    Shell.FlyoutBehavior="Disabled"
    Title="ExamenP2Gp">

    <ShellItem>
        <ShellContent 
            Title="Inicio" 
            ContentTemplate="{DataTemplate local:MainPage}" 
            Route="MainPage" />

        <ShellContent 
            Title="Chistes" 
            ContentTemplate="{DataTemplate local:ChistesPage}" 
            Route="Chistes" />

        <ShellContent 
            Title="About" 
            ContentTemplate="{DataTemplate local:AboutPage}" 
            Route="About" />
    </ShellItem>

</Shell>
