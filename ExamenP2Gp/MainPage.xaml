<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP2Gp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                 Text="Bienvenido a la aplicacion de Giovanny Padilla"
                 Style="{StaticResource Headline}"
                 SemanticProperties.HeadingLevel="Level1" />
            <Image
                Source="programacion.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Main page personalizado" />
            
            <Button 
            Text="Chistes"
            Clicked="GoToJokes"
            BackgroundColor="White"
            TextColor="Black"
            CornerRadius="10"
            BorderColor="Black"
            BorderWidth="1"
            HeightRequest="40"
            WidthRequest="150"/>

            <Button 
            Text="About"
            Clicked="GoToAbout"
            BackgroundColor="White"
            TextColor="Black"
            CornerRadius="10"
            BorderColor="Black"
            BorderWidth="1"
            HeightRequest="40"
            WidthRequest="150"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
