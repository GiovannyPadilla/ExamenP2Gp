<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP2Gp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="programacion.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Bienvenido a la aplicacion de Giovanny Padilla"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button 
            Text="Chistes"
            Clicked="GoToJokes"
            BackgroundColor="White"
            TextColor="Black"
            CornerRadius="10"
            BorderColor="Black"
            BorderWidth="1" />

            <Button 
            Text="About"
            Clicked="GoToAbout"
            BackgroundColor="White"
            TextColor="Black"
            CornerRadius="10"
            BorderColor="Black"
            BorderWidth="1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
